\begin_layout Standard
\begin_inset Formula 
\begin{equation}
Tf\, Idf_{word,document}=log(1+Frequency(word,document))*log(\frac{TotalDocuments}{TotalFrequency(word)})\label{eq:tfidf}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
